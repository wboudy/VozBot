# VozBot Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_ENV=development
PORT=8000

# Database (also used by Alembic)
DATABASE_URL=postgresql://vozbot:vozbot_dev@localhost:5432/vozbot
DB_URL=postgresql://vozbot:vozbot_dev@localhost:5432/vozbot

# Redis
REDIS_URL=redis://localhost:6379/0

# Speech providers (pluggable - set your provider)
STT_PROVIDER=deepgram
TTS_PROVIDER=deepgram

# Deepgram API (for speech-to-text and text-to-speech)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# LLM provider (pluggable - set your provider)
LLM_PROVIDER=openai

# OpenAI API (for LLM orchestration with tool calling)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Telephony - Twilio
TELEPHONY_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
INBOUND_NUMBER=+1XXXXXXXXXX
TRANSFER_NUMBER=+1XXXXXXXXXX

# Call Transfer Configuration
TRANSFER_TIMEOUT=30
HOLD_MUSIC_URL=

# Skip Twilio signature validation in development (set to true for local testing)
SKIP_TWILIO_VALIDATION=false

# Logging
LOG_LEVEL=info

# Database debugging (set to true to log SQL queries)
DB_ECHO=false

# Dashboard
DASHBOARD_PASSWORD=your_secure_password_here

# Notifications - Staff Contact
STAFF_PHONE=+1XXXXXXXXXX
STAFF_EMAIL=staff@example.com

# Notifications - Email Provider (sendgrid or ses)
EMAIL_PROVIDER=sendgrid

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourcompany.com

# AWS SES (if EMAIL_PROVIDER=ses)
AWS_REGION=us-east-1
SES_FROM_EMAIL=noreply@yourcompany.com

# SMS Rate Limiting
SMS_RATE_LIMIT=10

# Transcript URLs
TRANSCRIPT_BASE_URL=https://yourcompany.com/transcripts
